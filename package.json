{
	"name": "lint-action",
	"version": "0.4.0",
	"description": "GitHub Action for detecting and fixing linting errors",
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/lint-action",
	"license": "MIT",
	"private": true,
	"main": "./src/index.js",
	"scripts": {
		"test": "jest",
		"format": "prettier --write",
		"lint": "eslint --fix --max-warnings 0"
	},
	"dependencies": {},
	"peerDependencies": {},
	"devDependencies": {
		"@samuelmeuli/eslint-config": "^5.0.2",
		"@samuelmeuli/prettier-config": "^1.0.0",
		"eslint": "6.7.2",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-simple-import-sort": "^5.0.0",
		"fs-extra": "^8.1.0",
		"husky": "^3.0.9",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.3",
		"prettier": "^1.19.1"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@samuelmeuli/eslint-config"
		],
		"env": {
			"node": true,
			"jest": true
		},
		"rules": {
			"no-await-in-loop": "off",
			"no-unused-vars": [
				"error",
				{
					"args": "none",
					"varsIgnorePattern": "^_"
				}
			]
		}
	},
	"prettier": "@samuelmeuli/prettier-config",
	"lint-staged": {
		"!(test/linters/projects/**/*).js": [
			"yarn lint",
			"yarn format",
			"git add"
		],
		"!(test/linters/projects/**/*).{css,html,json,jsx,less,md,scss,ts,tsx,vue,yaml,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test && lint-staged"
		}
	}
}
